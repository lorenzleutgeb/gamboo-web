@import url(https://fonts.googleapis.com/css?family=Pacifico);

html
	padding 0px
	margin 0px
	border 0px

body
	padding: 0px
	margin 0px
	border 0px
	font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
a
	color: #00B7FF
span
	font-family Pacifico
	left 1%
	font-size 34px
	float left
	margin-left 15px
	margin-right 15px
header
	background-color rgba(255,255,255,0.7)
	box-shadow 0px 3px 10px -4px rgba(0,0,0,0.3)
header nav ul
	list-style-type none
	height 70px
header nav ul li
	height 30px
	top 0px
	float left
	display block
	font-size 24px
	border-left 1px solid rgba(0,0,0,0.3)
	padding 20px
	padding-right 25px
	transition background-color 2s, color 2s, border 2s
header ul li:hover
	background-color #555
	color white
	border-left 1px solid #555
	cursor pointer
div#content
	position relative
	width 100%
	padding 10px
	padding-top 0px
	margin auto
	
img#forkme
	position absolute
	top: 0
	right: 0
	border: 0
